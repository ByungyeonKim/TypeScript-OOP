{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noEmit": false,
    "outDir": "dist",
    "target": "es2017",
    "paths": {
      "~/*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ],
    },
    "typeRoots": [
      "@types/"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}